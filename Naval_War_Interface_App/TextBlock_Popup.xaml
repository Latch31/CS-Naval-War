<Window x:Class="Naval_War_Interface_App.TextBlock_Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Naval_War_Interface_App"
        mc:Ignorable="d"
        Title="Choose Player name
" Height="131" Width="246">
    <Grid>
        <Label Content="Enter Player Name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="246" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Content="Confirm" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="90" Cursor="Hand" Click="Confirm_ButtonClick"/>
        <TextBox x:Name="ReponseTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="150"/>
    </Grid>

</Window>
