<Window x:Class="Naval_War_Interface_App.Card_choice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Naval_War_Interface_App"
        mc:Ignorable="d"
        Title="Boat Direction" Height="166" Width="153">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="B_N" Content ="N" Grid.Column="1" Grid.Row="0" Cursor="Hand" Click="Card_Click" Height="50" Width="50"/>
        <Button x:Name="B_S" Content ="S" Grid.Column="1" Grid.Row="2" Cursor="Hand" Click="Card_Click" Width="50" Height="50"/>
        <Button x:Name="B_E" Content ="E" Grid.Column="2" Grid.Row="1" Cursor="Hand" Click="Card_Click" Width="50" Height="50"/>
        <Button x:Name="B_W" Content ="W" Grid.Column="0" Grid.Row="1" Cursor="Hand" Click="Card_Click" Width="50" Height="50"/>
    </Grid>
</Window>
